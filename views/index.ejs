<script>
    $(document).ready(function () {
        $(document).ajaxStart(function () {
            $.blockUI({
                message: '<img src="/loading.gif">',
                css: {backgroundColor: 'transparent', border: 'none', 'z-index': '99999'}
            });
        }).ajaxStop($.unblockUI);

        $('#dataTables-example').DataTable({
            responsive: true,
            language: {
                url: 'http://cdn.datatables.net/plug-ins/1.10.12/i18n/Portuguese-Brasil.json'
            }
        });
        setTimeout(function () {
            updateVoos();
            $('.datetimepicker').datetimepicker({
                locale: 'pt-br'
            });
            $('.input-datetime').click(function () {
                $(this).parent().find('.input-group-addon').trigger('click');
            });
            $('.money').mask('#.##0,00', {
                reverse: true
            });
            $('.number').mask('0#');
            $('.input-datetime').mask('00/00/0000 00:00');
        }, 1000);
        $('.geocomplete').geocomplete();
        $('#formInsereVoo').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/voo',
                data: {
                    origem: $('#formInsereVoo #origem').val(),
                    destino: $('#formInsereVoo #destino').val(),
                    assentos: $('#formInsereVoo #assentos').val(),
                    dataOrigem: $.formatDateTime('mm/dd/yy gg:ii', new Date($('#formInsereVoo #dataOrigem').val().split('/')[1] + '/' + $('#formInsereVoo #dataOrigem').val().split('/')[0] + '/' + $('#formInsereVoo #dataOrigem').val().split('/')[2])),
                    dataDestino: $.formatDateTime('mm/dd/yy gg:ii', new Date($('#formInsereVoo #dataDestino').val().split('/')[1] + '/' + $('#formInsereVoo #dataDestino').val().split('/')[0] + '/' + $('#formInsereVoo #dataDestino').val().split('/')[2])),
                    precoBasico: $('#formInsereVoo #precoBasico').val(),
                    precoExecutivo: $('#formInsereVoo #precoExecutivo').val(),
                    aberto: true
                },
                contentType: 'application/x-www-form-urlencoded',
                method: 'POST',
                success: function (json) {
                    $('#formInsereVoo')[0].reset();
                    $('#modalInserirPopup').find('.btn-danger').trigger('click');
                    swal({text: 'Voo cadastrado com sucesso.', title: 'Alerta', type: 'success'});
                }
            });
            updateVoos();
        });

        $('#formEditaVoo').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/voo/' + $('#formEditaVoo #_id').val(),
                data: {
                    origem: $('#formEditaVoo #origem').val(),
                    destino: $('#formEditaVoo #destino').val(),
                    assentos: $('#formEditaVoo #assentos').val(),
                    dataOrigem: $.formatDateTime('mm/dd/yy gg:ii', new Date($('#formEditaVoo #dataOrigem').val().split('/')[1] + '/' + $('#formEditaVoo #dataOrigem').val().split('/')[0] + '/' + $('#formEditaVoo #dataOrigem').val().split('/')[2])),
                    dataDestino: $.formatDateTime('mm/dd/yy gg:ii', new Date($('#formEditaVoo #dataDestino').val().split('/')[1] + '/' + $('#formEditaVoo #dataDestino').val().split('/')[0] + '/' + $('#formEditaVoo #dataDestino').val().split('/')[2])),
                    precoBasico: $('#formEditaVoo #precoBasico').val(),
                    precoExecutivo: $('#formEditaVoo #precoExecutivo').val(),
                    aberto: $('#formEditaVoo #aberto').val()
                },
                contentType: 'application/x-www-form-urlencoded',
                method: 'PUT',
                success: function (json) {
                    $('#formEditaVoo')[0].reset();
                    $('#modalEditarPopup').find('.btn-danger').trigger('click');
                    swal({text: 'Voo editado com sucesso.', title: 'Alerta', type: 'success'});
                }
            });
            updateVoos();
        });
    });

    function updateVoos() {
        var t = $('#dataTables-example').DataTable({
            destroy: true,
            responsive: true,
            'language': {
                "sEmptyTable": "Nenhum registro encontrado",
                "sInfo": "Mostrando de _START_ até _END_ do total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando 0 até 0 do total de 0 registros",
                "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                "sInfoPostFix": "",
                "sInfoThousands": ".",
                "sLengthMenu": "_MENU_ resultados por página",
                "sLoadingRecords": "Carregando...",
                "sProcessing": "Processando...",
                "sZeroRecords": "Nenhum registro encontrado",
                "sSearch": "Pesquisar",
                "oPaginate": {
                    "sNext": "Próximo",
                    "sPrevious": "Anterior",
                    "sFirst": "Primeiro",
                    "sLast": "Último"
                },
                "oAria": {
                    "sSortAscending": ": Ordenar colunas de forma ascendente",
                    "sSortDescending": ": Ordenar colunas de forma descendente"
                }
            }
        });
        t.clear().draw();
        $.ajax({
            url: '/voo',
            method: 'GET',
            success: function (json) {
                $.each(json, function (key, value) {
                    t.row.add([value.origem, value.destino, $.formatDateTime('dd/mm/yy - gg:ii', new Date(value.dataOrigem)), $.formatDateTime('dd/mm/yy - gg:ii', new Date(value.dataDestino)), value.assentos + ' Assentos', 'R$ ' + value.precoBasico, 'R$ ' + value.precoExecutivo, actionBuilder(value._id, value)]).draw();
                });
                var last_clicked_id = null;
                $('.deleteconfirm').click(function () {
                    last_clicked_id = $(this).attr('id');
                });
                $('.deleteconfirm').confirmation({
                    placement: 'left',
                    title: 'Tem certeza?',
                    btnOkLabel: '<i class="icon-ok-sign icon-white"></i> Sim',
                    btnCancelLabel: '<i class="icon-remove-sign"></i> Não',
                    singleton: true,
                    onConfirm: function () {
                        apagaVoo(last_clicked_id);
                    }
                });
                $('[title]').tooltip();
            }
        });
        $('[title]').tooltip();
    }

    function actionBuilder(id, obj) {
        var html = '<button type="button" class="btn btn-success col-md-12" id="' + id + '" onclick="editaVoo(this)" title="Editar" data-toggle="modal" data-target="#modalEditarPopup"><i class="fa fa-edit"></i></button>';
        html += ' ';
        if (obj.aberto == true) {
            html += '<button type="button" class="btn btn-warning col-md-12" id="' + id + '" onclick="desativarVoo(this)"  title="Desativar"><i class="fa fa-toggle-off"></i></button>';
        } else {
            html += '<button type="button" class="btn btn-primary col-md-12" id="' + id + '" onclick="ativarVoo(this)"  title="Ativar"><i class="fa fa-toggle-on"></i></button>';
        }
        html += ' ';
        html += '<button type="button" class="btn btn-danger deleteconfirm col-md-12" id="' + id + '" title="Apagar"><i class="fa fa-trash"></i></button>';
        html += ' ';
        return html;
    }

    function apagaVoo(id) {
        $.ajax({
            url: '/voo/' + id,
            method: 'DELETE',
            success: function (json) {
                swal({text: 'Voo deletado com sucesso.', title: 'Alerta', type: 'success'});
                updateVoos();
            }
        });
    }

    function desativarVoo(obj) {
        $.ajax({
            url: '/voo/' + obj.id,
            data: {
                aberto: false
            },
            method: 'PUT',
            success: function (json) {
                swal({text: 'Voo desativado com sucesso.', title: 'Alerta', type: 'success'});
                updateVoos();
            }
        });
    }

    function ativarVoo(obj) {
        $.ajax({
            url: '/voo/' + obj.id,
            data: {
                aberto: true
            },
            method: 'PUT',
            success: function (json) {
                swal({text: 'Voo ativado com sucesso.', title: 'Alerta', type: 'success'});
                updateVoos();
            }
        });
    }

    function editaVoo(obj) {
        $.ajax({
            url: '/voo/' + obj.id,
            method: 'GET',
            success: function (json) {
                $('#formEditaVoo #_id').val(json._id);
                $('#formEditaVoo #origem').val(json.origem);
                $('#formEditaVoo #destino').val(json.destino);
                $('#formEditaVoo #assentos').val(json.assentos);
                $('#formEditaVoo #dataOrigem').val($.formatDateTime('dd/mm/yy - gg:ii', new Date(json.dataOrigem)));
                $('#formEditaVoo #dataDestino').val($.formatDateTime('dd/mm/yy - gg:ii', new Date(json.dataDestino)));
                $('#formEditaVoo #precoBasico').val(json.precoBasico);
                $('#formEditaVoo #precoExecutivo').val(json.precoExecutivo);
                $('#formEditaVoo #aberto').val(json.aberto);
            }
        });
    }
